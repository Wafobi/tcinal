[sub_resource type="GDScript" id="GDScript_ohhn4"]
script/source = "extends Control

var inMenu : bool = false

func exitMenu():
	if get_tree().paused:
		hide()
		$GridContainer/Label.text = \"Chefs's Adventure\"
		$\"GridContainer/NewGame\".show()
		$\"GridContainer/ExitGame\".show()
		get_tree().paused = false

func _input(_event):
	if Input.is_action_just_pressed(\"openMenu\") and not inMenu:
		if get_tree().paused:
			exitMenu()
		else:
			get_tree().paused = true
			$GridContainer/Label.text = \"Game paused\"
			$\"GridContainer/NewGame\".hide()
			$\"GridContainer/ExitGame\".hide()
			show()
"

